@charset "UTF-8";
/*
기본테마1 - 회색메뉴
*/

// 로그아웃 버튼 Image
@logoutBtnImg: '../img/btn-log-out.png';

// 메뉴바/모달헤더
// 회색
@background_color_header: #6d6e71;

// 살짝 진한 자줏빛
@color_lg_hover: #A90346;

// "하단탭"과 "조회버튼" 색상 변경
// 기본 lg 자줏빛 색상 - 하단탭/버튼/테이블페이징
@background_color_lg_base: #C40452;
// hover 시 색상 - 살짝 진한 자줏빛
@background_color_lg_hover: #A90346;
// active시 색상 - 살짝 더 진한 자줏빛
@background_color_lg_active: #8F033C;
// 기본lg의 테두리 - 버튼hover와 동일
@border_color_lg_base: #A90346;
// hover lg의 테두리 - 버튼active와 동일
@border_color_lg_hover: #8F033C;
// active lg의 테두리
@border_color_lg_active: #780232;

// 상단 메뉴/테이블, 마우스 hover시 색상
// hover 백그라운드색 연한 lg자줏색
@background_color_menu_hover: #FEE2ED;
